<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.courses.management.user.User" table="users" catalog="course_management" schema="public">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">users_id_seq</param>
                <param name="increment_size">1</param>
                <param name="optimizer">none</param>
            </generator>
        </id>
        <property name="firstName" type="java.lang.String">
            <column name="first_name" length="50"/>
        </property>
        <property name="lastName" type="java.lang.String">
            <column name="last_name" length="50"/>
        </property>
        <property name="email" type="java.lang.String" unique="true">
            <column name="email" length="50"/>
        </property>
        <property name="userRole" column="user_role" update="true" insert="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.courses.management.user.UserRole</param>
                <param name="type">java.sql.Types.VARCHAR</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="status" column="status" update="true" insert="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.courses.management.user.UserStatus</param>
                <param name="type">java.sql.Types.VARCHAR</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <many-to-one name="course" class="com.courses.management.course.Course" column="course_id"/>
<!--        <list name="solutions" table="solution">-->
<!--            <key>-->
<!--                <column name="user_id"/>-->
<!--            </key>-->
<!--            <index column="id"/>-->
<!--            <one-to-many class="com.courses.management.solution.Solution"/>-->
<!--        </list>-->
    </class>
</hibernate-mapping>
