<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/context
 		http://www.springframework.org/schema/context/spring-context-3.2.xsd ">
    <context:spring-configured/>
    <context:annotation-config/>
    <context:component-scan base-package="com.courses.management"/>

    <bean id="homeworkDAO" class="com.courses.management.homework.HomeworkDAOImpl"/>
    <bean id="courseDAO" class="com.courses.management.course.CourseDAOImpl"/>
    <bean id="homeworks" class="com.courses.management.homework.Homeworks">
        <constructor-arg ref="homeworkDAO"/>
        <constructor-arg ref="courseDAO"/>
    </bean>
    <bean id="courses" class="com.courses.management.course.Courses">
        <constructor-arg ref="courseDAO"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">

        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/course_management"/>
        <property name="username" value="postgres"/>
        <property name="password" value="admin"/>

    </bean>
</beans>
